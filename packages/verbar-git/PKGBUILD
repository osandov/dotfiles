# Maintainer: Omar Sandoval <osandov@osandov.com>

pkgname=verbar-git
_pkgname=verbar
pkgver=r29.64743b6
pkgrel=1
pkgdesc="Status bar for dwm"
arch=('x86_64' 'i686')
url="https://github.com/osandov/verbar"
license=('GPL3')
depends=('libmnl' 'libpulse')
makedepends=('git')
source=("$_pkgname::git+https://github.com/osandov/verbar.git")
md5sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

build() {
  cd "$_pkgname"
  make
}

package() {
  cd "$_pkgname"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
