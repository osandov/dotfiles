# Maintainer: Omar Sandoval <osandov@osandov.com>

pkgname=supavolumed-git
_pkgname=supavolumed
pkgver=r10.33637d3
pkgrel=1
pkgdesc="PulseAudio volume daemon"
arch=('x86_64' 'i686')
url="https://github.com/osandov/supavolumed"
license=('GPL3')
depends=('gtk3' 'libnotify' 'libpulse')
makedepends=('git')
source=("$_pkgname::git+https://github.com/osandov/supavolumed.git")
md5sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

build() {
  cd "$_pkgname"
  make
}

package() {
  cd "$_pkgname"
  make PREFIX=/usr DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
