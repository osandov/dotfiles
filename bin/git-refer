#!/bin/bash

USAGE="[-t] <commit>"
OPTIONS_KEEPDASHDASH=
OPTIONS_STUCKLONG=
OPTIONS_SPEC="\
git refer $USAGE
--
t,tag        include the first tag that contains the commit"

SUBDIRECTORY_OK=Yes
. "$(git --exec-path)/git-sh-setup"

tag=
while [ $# != 0 ]; do
	case "$1" in
	-t|--tag)
		tag=1
		;;
	--tag-pattern)
		shift
		tag_pattern="$1"
		;;
	--)
		shift
		break
		;;
	-*)
		usage
		;;
	*)
		break
		;;
	esac
	shift
done

test $# -eq 1 || usage

commit="$1"

show() {
	git --no-pager show -s --abbrev=12 --pretty="$1:%h (\"%s\")" "$commit^{commit}" --
}

if [ -z "$tag" ]; then
	show tformat
else
	tag_patterns=()
	while IFS= read -r -d '' pattern; do
		if [ -n "$pattern" ]; then
			tag_patterns+=("$pattern")
		else
			tag_patterns=()
		fi
	done < <(git config --get-all --null refer.tagPattern)

	show format || exit
	tag=$(git tag --sort version:refname --contains "$commit" "${tag_patterns[@]}" | head -1)
	if [ -n "$tag" ]; then
		printf ' (in %s)\n' "$tag"
	else
		printf ' (not in tag)\n'
	fi
fi
